# ChainBreak Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# BlockCypher API Configuration
BLOCKCYPHER_API_KEY=your_api_key_here

# Threat Intelligence API Keys
BITCOINWHOSWHO_API_KEY=
CHAINABUSE_API_KEY=
CROPTY_API_KEY=

# Threat Intelligence API Endpoints (optional overrides)
CHAINABUSE_BASE_URL=https://chainabuse.com
BITCOINWHOSWHO_API_URL=https://www.bitcoinwhoswho.com/api
BITCOINWHOSWHO_WEB_URL=https://www.bitcoinwhoswho.com
CROPTY_API_URL=https://www.cropty.io/api/blacklist
BTC_BLACK_DNSBL=bl.btcblack.it

# Scraper Configuration
SCRAPER_TIMEOUT=15
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_DELAY=2.0
SCRAPER_USER_AGENT=ChainBreak-ThreatIntel/1.0
