# ChainBreak Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================
# Application Settings
# ============================================
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=change-this-to-a-random-secret-key
HOST=0.0.0.0
PORT=5000

# ============================================
# Neo4j Database Configuration
# ============================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-password-here
NEO4J_DATABASE=neo4j
NEO4J_ENCRYPTED=false

# ============================================
# Blockchain API Configuration
# ============================================
# Blockchain.com API (no key required for basic usage)
BLOCKCHAIN_API_BASE_URL=https://blockchain.info

# BlockCypher API (optional - for enhanced features)
BLOCKCYPHER_API_KEY=your-blockcypher-api-key-here

# ============================================
# Security Settings
# ============================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# Data Storage
# ============================================
DATA_DIR=./data
GRAPH_DIR=./data/graph
CACHE_DIR=./data/cache
LOG_DIR=./logs

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=chainbreak.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ============================================
# Analysis Configuration
# ============================================
# Default transaction limit for graph building
DEFAULT_TX_LIMIT=50
MAX_TX_LIMIT=200

# Cache TTL in seconds
CACHE_TTL=300

# Analysis timeouts (seconds)
ANALYSIS_TIMEOUT=300
FETCH_TIMEOUT=120

# ============================================
# Community Detection
# ============================================
LOUVAIN_RESOLUTION=1.0
LEIDEN_RESOLUTION=1.0
MAX_ITERATIONS=100

# ============================================
# WebSocket Configuration
# ============================================
WEBSOCKET_ENABLED=true
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=60

# ============================================
# Threat Intelligence
# ============================================
THREAT_INTEL_ENABLED=true
THREAT_INTEL_CACHE_TTL=3600

# ============================================
# Performance & Optimization
# ============================================
# Worker threads for async operations
WORKER_THREADS=4

# Enable/disable features
ENABLE_VISUALIZATION=true
ENABLE_CACHING=true
ENABLE_PROFILING=false

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_BUILD_DIR=./frontend/build
FRONTEND_DEV_PORT=3000

# ============================================
# Docker Configuration
# ============================================
DOCKER_NEO4J_VERSION=5.15-community
DOCKER_NETWORK=chainbreak-network

# ============================================
# Monitoring & Analytics
# ============================================
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentry (error tracking - optional)
SENTRY_DSN=

# ============================================
# Development Settings
# ============================================
# Only use in development!
DEV_MODE=false
RELOAD_ON_CHANGE=false
PROFILE_REQUESTS=false
